<div class="container mt-3">
  <div class="row">
    <h1>All flats (<%= @flats.count %>)</h1>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex icons-list">
              <div class="flex icons">
                <i class="material-icons mr-2">group</i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex icons ml-3">
                <i class="material-icons mr-2">euro_symbol</i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>